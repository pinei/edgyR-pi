set -e

./install-dictionaries
./install-mathjax
./install-boost
./install-pandoc
./install-packages
./install-sentry-cli
./install-npm-dependencies
./install-soci
./install-yaml-cpp

# Google's "depot-tools" download x86 binaries!
# There are workarounds but they're hideous.
# It's simpler just to ignore crashpad on arm64
if [ `uname -m` != "aarch64" ]
then
  sudo ./install-crashpad
fi

if [ -e install-overlay ]
then
   ./install-overlay
fi
